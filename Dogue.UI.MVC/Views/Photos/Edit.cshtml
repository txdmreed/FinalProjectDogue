@model Dogue.EF.DATA.Photo

@{
    ViewBag.Title = "Edit";
}
<div class="container">
    <h2>Edit</h2>


    @using (Html.BeginForm("Edit", "Photos", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Photo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PhotoID)
        @Html.HiddenFor(model => model.PhotoUrl)
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.FilterID, "FilterID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FilterID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FilterID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OwnerAssetID, "AssetCallName", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("OwnerAssetID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OwnerAssetID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="container">
            <div class="form-group">
                <h5>Client Animal Photo</h5>
                <div class="row">
                    <div class="col-sm-offset-3 col-sm-6">
                        <div>
                            <img src="~/Content/assets/img/portfolio/T_@Model.PhotoUrl" />
                        </div>
                        <div>
                            <input type="file" name="myImg" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index") |    @Html.ActionLink("Delete", "Delete", new { id = Model.PhotoID })
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
